<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/news_DateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:paddingLeft="20px"
        android:text="Date: 10-31-2017" />

    <TextView
        android:id="@+id/news_EventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/news_DateTitle"
        android:layout_below="@+id/news_DateTitle"
        android:layout_marginTop="14dp"
        android:paddingLeft="20px"
        android:text="Event: 06 internal tournment 2017" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_EventTitle"
        android:layout_marginTop="10dp"
        app:srcCompat="@color/common_google_signin_btn_text_dark_focused" />
</RelativeLayout>